<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_chat_list"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtView_chat_time"
                android:text="Online"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtView_chat_count"
                android:text="13"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/background_light"
                android:background="@drawable/shape_oval_message_count"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtView_chat_title"
                android:text="Medium Text"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="right"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@android:color/background_dark"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txtView_chat_content"
                android:text="Medium Text"
                android:padding="5dp"
                android:gravity="right"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@android:color/darker_gray"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imView_chat_pic"
                android:padding="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_person_pic"
                app:civ_border_color="#000000"
                app:civ_border_width="1dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>