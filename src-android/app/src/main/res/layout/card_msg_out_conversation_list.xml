<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    android:layout_marginStart="60dp"
    android:layout_marginLeft="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/chat_bubble_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtView_conversation_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textColor="@color/msg_text"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtView_conversation_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twelve_o_clock"
                android:textSize="12sp"
                android:textColor="@color/msg_date"
                android:layout_gravity="center_vertical"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/imView_conversation_msg_status"
                android:src="@drawable/ic_two_tick"
                android:layout_gravity="center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>